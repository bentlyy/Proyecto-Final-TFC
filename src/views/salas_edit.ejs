<%- include ('partials/_header') %>

<div class="container mt-5">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <form action="/sala/update/<%= data.salaid %>" method="post">
                    <div class="form-group">
                        <input type="text" name="nombresala" placeholder="Nombre" value="<%= data.nombresala %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="number" name="capacidad" placeholder="Capacidad" value="<%= data.capacidad %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="descripcion" placeholder="Descripcion" value="<%= data.descripcion %>" class="form-control">
                    </div>
                   
                    <button type="submit" class="btn btn-primary">
                        Guardar sala
                    </button>
                </form>   
            </div>
        </div>
    </div>

</div>


<%- include ('partials/_footer') %>