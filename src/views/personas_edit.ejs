<%- include ('partials/_header') %>

<div class="container mt-5">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <form action="/persona/update/<%= data.rutpersona %>" method="post">
                    <div class="form-group">
                        <input type="text" name="rutpersona" placeholder="Rut" value="<%= data.rutpersona %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="nombrepersona" placeholder="Nombre" value="<%= data.nombrepersona %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="apellidopersona" placeholder="Apellido" value="<%= data.apellidopersona %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" value="<%= data.email %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="direccion" placeholder="Direccion" value="<%= data.direccion %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="tipo" placeholder="Tipo" value="<%= data.tipo %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="ubicacion" placeholder="Ubicacion" value="<%= data.ubicacion %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="date" name="fechanacimiento" placeholder="Fecha de nacimiento" value="<%= data.fechanacimiento %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="contraseña" placeholder="Contraseña" value="<%= data.contraseña %>" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Guardar persona
                    </button>
                </form>   
            </div>
        </div>
    </div>

</div>


<%- include ('partials/_footer') %>