<%- include ('partials/_header') %>

<div class="container mt-5">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <form action="/update/<%= data.usuarioid %>" method="post">
                    <div class="form-group">
                        <input type="text" name="rutusuario" placeholder="Rut" value="<%= data.rutusuario %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="nombreusuario" placeholder="Nombre" value="<%= data.nombreusuario %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="apellidousuario" placeholder="Apellido" value="<%= data.apellidousuario %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" value="<%= data.email %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="direccion" placeholder="Direccion" value="<%= data.direccion %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="contraseña" placeholder="Contraseña" value="<%= data.contraseña %>" class="form-control">
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        Guardar usuario
                    </button>
                </form>   
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer') %>
